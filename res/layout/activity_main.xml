<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0070AF64"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="358dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="@dimen/default_gap"
        android:paddingLeft="@dimen/default_gap"
        android:textColor="#0648F1"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="349dp"
        android:layout_height="334dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/buttonc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="@string/C"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_gravity=""
            app:layout_row="2" />

        <Button
            android:id="@+id/buttondiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="@string/div"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonmod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="@string/mod"
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttondel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FA0101"
            android:text="@string/DEL"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="7"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="8"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="9"
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonmult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="X"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="1"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="5"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="6"
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="-"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="2"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="4"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="3"
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="+"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonsqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="@string/sqrt"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_row="6" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="0"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="6" />

        <Button
            android:id="@+id/buttondot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="."
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="6" />

        <Button
            android:id="@+id/buttoneql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fc22dd"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="6" />

        <Button
            android:id="@+id/buttonsqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SQR"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonpow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POW"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonfact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X!"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonsin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sin"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttoncos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cos"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttontan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tan"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/x"
            app:layout_column="3"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/error"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

</androidx.constraintlayout.widget.ConstraintLayout>
